{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "target": "es2019",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["ES2019"],
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "alwaysStrict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "noImplicitThis": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "__tests__"]
}
